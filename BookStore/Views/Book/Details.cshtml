@model BookStore.Models.Book

@{
    ViewBag.Title = "Details";
}

<section class="blog-details-hero set-bg" data-setbg="img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>@Html.DisplayFor(Model => Model.Title)</h2>
                    <ul>
                        <li>By @Html.DisplayFor(Model => Model.Author)</li>
                        <li>@Html.DisplayFor(Model => Model.CreatedDate)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button"><span class="icon_search"></span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">All</a></li>
                            <li><a href="#">Beauty (20)</a></li>
                            <li><a href="#">Food (5)</a></li>
                            <li><a href="#">Life Style (9)</a></li>
                            <li><a href="#">Travel (10)</a></li>
                        </ul>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Search By</h4>
                        <div class="blog__sidebar__item__tags">
                            <span>@Html.DisplayFor(Model => Model.Type)</span>
                            <span>@Html.DisplayFor(Model => Model.Title)</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img class="img-fluid" src="@Html.DisplayFor(Model => Model.Image)" alt="Book Image" />
                    <h3>@Html.DisplayFor(Model => Model.Title)</h3>
                    <h4>@Html.DisplayFor(Model => Model.Author)</h4>
                    <p>@Html.DisplayFor(Model => Model.Description)</p>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><h4><span>Categories:</span> @Html.DisplayFor(Model => Model.Type)</h4></li>
                                    <li><h4><span>Price:</span> $@Html.DisplayFor(Model => Model.Price)</h4></li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fab fa-facebook"></i></a>
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                    <a href="#"><i class="fab fa-google-plus"></i></a>
                                    <a href="#"><i class="fab fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
