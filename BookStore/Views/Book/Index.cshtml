@model IEnumerable<BookStore.Models.Book>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Books</h2>

    <p>
        <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Image)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(modelItem => item.Image)" style="height:100px"/></td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>
                        <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.BookId })">Edit</a>
                        <a class="btn btn-info" href="@Url.Action("Details", new { id = item.BookId })">Details</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.BookId })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
